{% extends '@SocialMediaContent/base.html.twig' %}
{% block meta_title %}
    {{ name }} Trend - Soome
{% endblock %}

{% block breadcrumb %}
    {{ include('@SocialMediaContent/breadcrumb.html.twig', { levels: [{link: path('twitter_trends'), name: 'Trends'}, {name: name }] })}}
{% endblock %}
{% block content %}

            <div class="row">
                
                <div class="col-md-6">
                    

                    <div class="ibox">
                        <div class="ibox-content">

                            
                            <div class="row">
                            
                                    <div class="col-lg-12">

                                        <h4>{{ name }} trend</h4>
                                        
                                        <div id="trend_chart" style="width: 100%; height: 500px"></div>

                                    </div>

                            </div>


                        </div>
                    </div>



                </div>

            </div>

{% endblock %}


{% block app_javascripts %}

 
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

        <script type="text/javascript">
          google.charts.load('current', {'packages':['corechart']});
          google.charts.setOnLoadCallback(drawChart);

          
          function drawChart() {
            var array = [
            ['date', 'Rank'],

            {% for trend in trends %}
                ['{{ trend.datetime.format('h:i') }}', {{ trend.rank }}] {% if not loop.last %},{% endif %}
            {% endfor %}

          ];
            var data = google.visualization.arrayToDataTable(array);

            var options = {
                title: '',
                legend: { position: 'none' },
                vAxis: { 
                    viewWindow:{
                        
                        min:0
                    }
                },
                chartArea: {'width': '80%', 'height': '80%'}

            };

            var chart = new google.visualization.LineChart(document.getElementById('trend_chart'));

            function selectHandler() {

                console.log("handler", chart.getSelection());

                var selection = chart.getSelection();

                if(selection.length) {

                    var item = selection[0];
                    if (item.row != null && item.column != null) {

                        console.log("selection", item.row, item.column);

                    } 

                }

            }

            google.visualization.events.addListener(chart, 'select', selectHandler);

            chart.draw(data, options);

            $(window).resize(function() {

                if(this.resizeTO) clearTimeout(this.resizeTO);
                this.resizeTO = setTimeout(function() {
                    $(this).trigger('resizeEnd');
                }, 500);
            });

            //redraw graph when window resize is completed  
            $(window).on('resizeEnd', function() {
                chart.draw(data, options);
            });

          }


        </script>



{% endblock %}