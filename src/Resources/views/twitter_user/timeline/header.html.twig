<a href="{{ path('twitter_users_show', {id: tweet.user.id}) }}">
    {% if tweet.user %}
        {{ tweet.user.screenName }}
    {% else %}
        no user for {{ tweet.id }}
    {% endif %}
</a>
<a target="_blank" href="https://twitter.com/{{ tweet.user.screenName }}/status/{{ tweet.id }}"><small class="text-muted">{{ tweet.postedAt.format('Y-m-d H:i:s') }}</small></a>